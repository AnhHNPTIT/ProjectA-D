<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>controller.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>HomePageServlet</servlet-name>
        <servlet-class>controller.HomePageServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doCart</servlet-name>
        <servlet-class>controller.doCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doRemoveItemFromCart</servlet-name>
        <servlet-class>controller.doRemoveItemFromCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doGoToHomePage</servlet-name>
        <servlet-class>controller.doGoToHomePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doOpenCart</servlet-name>
        <servlet-class>controller.doOpenCart</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doGoToPurchasePage</servlet-name>
        <servlet-class>controller.doGoToPurchasePage</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doPurchase</servlet-name>
        <servlet-class>controller.doPurchase</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doSearch</servlet-name>
        <servlet-class>controller.doSearch</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>doOpenSearchPage</servlet-name>
        <servlet-class>controller.doOpenSearchPage</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/LoginServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>HomePageServlet</servlet-name>
        <url-pattern>/HomePageServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doCart</servlet-name>
        <url-pattern>/doCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doRemoveItemFromCart</servlet-name>
        <url-pattern>/doRemoveItemFromCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doGoToHomePage</servlet-name>
        <url-pattern>/doGoToHomePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doOpenCart</servlet-name>
        <url-pattern>/doOpenCart</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doGoToPurchasePage</servlet-name>
        <url-pattern>/doGoToPurchasePage</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doPurchase</servlet-name>
        <url-pattern>/doPurchase</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doSearch</servlet-name>
        <url-pattern>/doSearch</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>doOpenSearchPage</servlet-name>
        <url-pattern>/doOpenSearchPage</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
</web-app>
